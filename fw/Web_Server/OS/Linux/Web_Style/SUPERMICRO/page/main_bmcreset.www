	<script type="text/javascript">document.write("<script type=\"text/javascript\", src = \"../js/lang/" + top.lang_setting + "/lang_str.js\"><\/script>");</script>
	<script type="text/javascript">
	/*
	global variables
	*/
	var mainPage = "../cgi/url_redirect.cgi?url_name=maintenance";
	var loginPage = "/";
	
	function PageInit()
	{
		// Get multi-language string
		document.title = lang.LANG_BMCRESET_TITLE;
		document.getElementById("resetBtn").value = lang.LANG_BMCRESET_RESET;
		$(TAG_ALERT)
		$(TAG_MAINPAGE)		
	}
	
	function doBmcReset()
	{
		document.getElementById("resetBtn").disabled = true;
		document.getElementById("bmcStatusMsg").innerHTML = lang.LANG_BMCRESET_REDIRECT;
		
		Loading(true);
		var url = '/cgi/BMCReset.cgi';
		var pars = 'time_stamp='+(new Date());
	   	var myAjax = new Ajax.Request(
	        url,
	        {method: 'post', parameters:pars, onComplete:doBmcResetHandler}//reigister callback function
	        );
			
		setTimeout('returnToLogin()',70000);
	}
	
	function doBmcResetHandler(originalRequest)
	{
		// do nothing
	}
	
	function returnToLogin()
	{
		Loading(false);
		top.location = loginPage;
	}
	
	</script>
</head>
